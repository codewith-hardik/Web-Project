<% layout("/layouts/basic.ejs") -%>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    text-align: center;
  }
  .filter {
    margin-right: 1rem;
    margin-top: 2rem;
    text-align: center;
    opacity: 0.8;
  }
  .filter:hover {
    opacity: 1;
  }
  .filter p {
    font-size: 0.9rem;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    display: flex;
    text-align: center;
    align-items: center;
    height: 3.5rem;
    padding: 1rem;
    border: 1px solid black;
    border-radius: 1rem;
    margin-top: 1rem;
    
  }
  
</style>

<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>

  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  
  <div class="filter">
    <div><i class="fa-solid fa-golf-ball-tee"></i></div>
    <p>Golfing</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-tower-observation"></i></div>
    <p>Towers</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-restroom"></i></div>
    <p>Restroom</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Mountain</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Pools</p>
  </div>
  <div class="filter">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Tranding</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-key"></i></div>
    <p>New</p>
  </div>

  <div class="tax-toggle">
    <div class="form-check form-switch form-check-reverse">
      <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
      <label class="form-check-label" for="flexSwitchCheckReverse">Display total before taxes</label>
    </div>
  </div>
</div>



<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
  <% for(let listing of allListings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing-img"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="jaro-card-text">
          <b><%= listing.title %></b><br />
          &#8377; <%= (listing.price || 0).toLocaleString("en-IN") %>  <i class="tax-info">&nbsp;&nbsp;&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>


<script>
  let taxSwitch = document.getElementById("flexSwitchCheckReverse");
  taxSwitch.addEventListener("click", (req,res)=>{
    let taxInfo = document.getElementsByClassName("tax-info");

    for(info of taxInfo){
      if(info.style.display !="inline" ){
         info.style.display = "inline"
      }else(
       info.style.display = "none"
      )
     
    }

  })
</script>
